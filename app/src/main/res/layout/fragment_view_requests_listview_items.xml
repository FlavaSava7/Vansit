<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/requests_list_items_layout"
    android:elevation="5dp">

    <android.support.v7.widget.CardView

        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/views_button_margin"
        android:layout_marginRight="@dimen/views_button_margin"
        android:layout_marginTop="@dimen/views_button_margin">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/viewRequests_items_TitleData"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/views_margin"
                android:layout_marginLeft="@dimen/views_margin"
                android:layout_marginTop="@dimen/views_top_margin"
                android:textColor="@color/gray"
                android:singleLine="true"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/common_google_signin_btn_icon_dark"
                android:id="@+id/viewRequests_items_typeIcon"
                android:layout_marginTop="@dimen/views_top_margin"
                android:layout_marginLeft="@dimen/views_button_margin"
                android:layout_marginRight="@dimen/views_button_margin" />


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/views_top_margin"
                android:layout_marginLeft="@dimen/views_button_margin"
                android:layout_marginRight="@dimen/views_button_margin">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/views_margin_s"
                        android:layout_marginBottom="@dimen/views_margin_s">

                        <TextView
                            android:text="@string/view_requests_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView3"
                            android:textSize="12sp"
                            android:textStyle="normal|bold"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/viewRequests_items_addressData"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:layout_marginLeft="@dimen/views_top_margin"
                            android:layout_marginRight="@dimen/views_top_margin" />
                    </LinearLayout>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@color/fragment_background"
                        android:layout_marginLeft="@dimen/views_top_margin"
                        android:layout_marginRight="@dimen/views_top_margin" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/views_margin_s"
                        android:layout_marginBottom="@dimen/views_margin_s">

                        <TextView
                            android:text="@string/view_requests_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView3"
                            android:textSize="12sp"
                            android:textStyle="normal|bold"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/viewRequests_items_distanceData"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:layout_marginLeft="@dimen/views_top_margin"
                            android:layout_marginRight="@dimen/views_top_margin" />
                    </LinearLayout>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@color/fragment_background"
                        android:layout_marginLeft="@dimen/views_top_margin"
                        android:layout_marginRight="@dimen/views_top_margin" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/views_margin_s"
                        android:layout_marginBottom="@dimen/views_margin_s">

                        <TextView
                            android:text="@string/view_requests_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView3"
                            android:textSize="12sp"
                            android:textStyle="normal|bold"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/viewRequests_items_statusData"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:layout_marginLeft="@dimen/views_top_margin"
                            android:layout_marginRight="@dimen/views_top_margin" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5"
                android:layout_weight="0.5"
                android:layout_marginLeft="@dimen/views_margin_xl"
                android:layout_marginRight="@dimen/views_margin_xl">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:id="@+id/viewRequests_items_call_layout"
                    android:layout_marginLeft="@dimen/views_margin"
                    android:layout_marginRight="@dimen/views_margin">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_call"
                        android:drawableTint="@color/gray"
                        android:drawableTintMode="src_atop"
                        android:id="@+id/viewRequests_items_call_img"
                        android:tint="@color/gray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/list_item_call_text"
                        android:id="@+id/viewRequests_items_call_text"
                        android:textAllCaps="true"
                        android:textStyle="normal|bold"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="12sp"
                        android:textColor="@color/gray"
                        style="@style/Base.Widget.AppCompat.Button.ButtonBar.AlertDialog"
                        android:layout_weight="0.45"
                        android:gravity="center_vertical"
                        android:clickable="false"
                        android:longClickable="false" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:id="@+id/viewRequests_items_serve_layout"
                    android:layout_marginLeft="@dimen/views_margin"
                    android:layout_marginRight="@dimen/views_margin">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_call"
                        android:drawableTint="@color/gray"
                        android:drawableTintMode="src_atop"
                        android:id="@+id/viewRequests_items_map_img"
                        android:tint="@color/gray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/view_requests_serve"
                        android:id="@+id/viewRequests_items_serve_text"
                        android:textAllCaps="true"
                        android:textStyle="normal|bold"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="12sp"
                        android:textColor="@color/gray"
                        style="@style/Base.Widget.AppCompat.Button.ButtonBar.AlertDialog"
                        android:layout_weight="0.45"
                        android:gravity="center_vertical"
                        android:clickable="false"
                        android:longClickable="false" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/viewRequests_items_profile_layout"
                    android:layout_marginLeft="@dimen/views_margin"
                    android:layout_marginRight="@dimen/views_margin">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_person"
                        android:drawableTint="@color/gray"
                        android:drawableTintMode="src_atop"
                        android:id="@+id/imageView2"
                        android:tint="@color/gray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:text="@string/list_item_profile_text"
                        android:id="@+id/viewRequests_items_profile_text"
                        android:textAllCaps="true"
                        android:textStyle="normal|bold"
                        android:layout_weight="0.45"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="12sp"
                        android:textColor="@color/gray"
                        android:drawableTint="@color/gray"
                        android:drawableTintMode="src_atop"
                        style="@style/Base.Widget.AppCompat.Button.ButtonBar.AlertDialog"
                        android:textAlignment="gravity"
                        android:gravity="center_vertical" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
