<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/my_offers_list_items_layout"
    android:elevation="5dp">

    <android.support.v7.widget.CardView

        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/views_button_margin"
        android:layout_marginRight="@dimen/views_button_margin"
        android:layout_marginTop="@dimen/views_button_margin"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/my_offers_list_items_title"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/main_items_typeIcon"
                android:layout_toEndOf="@+id/main_items_typeIcon"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/views_button_margin"
                android:layout_marginLeft="@dimen/views_button_margin"
                android:layout_marginTop="@dimen/views_top_margin"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:singleLine="true"
                android:textSize="18sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/views_top_margin">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@mipmap/ic_type_car"
                    android:id="@+id/main_items_typeIcon"
                    android:layout_marginTop="@dimen/views_top_margin"
                    android:layout_marginLeft="@dimen/views_button_margin" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/views_top_margin"
                        android:layout_marginBottom="@dimen/views_margin_s">

                        <TextView
                            android:text="@string/list_item_city_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView3"
                            android:layout_marginLeft="@dimen/views_top_margin"
                            android:textStyle="normal|bold"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/my_offers_list_items_city"
                            android:layout_weight="1"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"
                        android:layout_marginLeft="@dimen/views_top_margin"
                        android:layout_marginRight="@dimen/views_margin_xl"

                         />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_marginLeft="@dimen/views_margin"
                android:layout_marginRight="@dimen/views_button_margin"
                android:layout_marginTop="@dimen/views_margin"
                android:layout_marginBottom="@dimen/views_top_margin">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/list_item_edit_text"
                    android:id="@+id/my_offers_list_items_edit"
                    android:drawableLeft="@drawable/ic_mode_edit"
                    android:gravity="center_vertical"
                    android:textAllCaps="true"
                    android:textStyle="normal|bold"
                    android:layout_weight="0.43"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="12sp"
                    android:textColor="@color/editButtonColor"
                    android:drawableTint="@color/editButtonColor"
                    android:drawableTintMode="src_atop"
                    android:duplicateParentState="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/list_item_share_text"
                    android:id="@+id/my_offers_list_items_share"
                    android:drawableLeft="@drawable/ic_repeat"
                    android:gravity="center_vertical"
                    android:textAllCaps="true"
                    android:textStyle="normal|bold"
                    android:layout_weight="0.43"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="12sp"
                    android:textColor="@color/shareButtonColor"
                    android:drawableTint="@color/shareButtonColor"
                    android:drawableTintMode="src_atop"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/list_item_delete_text"
                    android:id="@+id/my_offers_list_items_delete"
                    android:drawableLeft="@drawable/ic_delete"
                    android:gravity="center_vertical"
                    android:textAllCaps="true"
                    android:textStyle="normal|bold"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="12sp"
                    android:textColor="@color/deleteButtonColor"
                    android:drawableTint="@color/deleteButtonColor"
                    android:drawableTintMode="src_atop"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>