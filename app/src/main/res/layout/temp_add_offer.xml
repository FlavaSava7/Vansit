<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView

                android:id="@+id/card_view"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/views_button_margin"
                android:layout_marginRight="@dimen/views_button_margin"
                android:layout_marginTop="@dimen/views_button_margin"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="@string/add_offer_title_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/addOffer_title_text"
                        android:textStyle="normal|bold"
                        android:textSize="18sp"
                        android:layout_margin="@dimen/views_top_margin" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberPassword"
                        android:ems="10"
                        android:id="@+id/addOffer_editTitle"
                        android:layout_margin="@dimen/views_top_margin" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView

                android:id="@+id/card_view2"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_view"
                android:layout_marginRight="@dimen/views_button_margin"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/views_button_margin"
                android:layout_marginTop="@dimen/views_button_margin">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="@string/add_offer_desc_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/addOffer_title_text"
                        android:textStyle="normal|bold"
                        android:textSize="18sp"
                        android:layout_margin="@dimen/views_top_margin" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:ems="10"
                        android:id="@+id/addOffer_editDesc"
                        android:minLines="3" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView

                android:id="@+id/card_view3"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_view2"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/views_button_margin"
                android:layout_marginRight="@dimen/views_button_margin"
                android:layout_marginTop="@dimen/views_button_margin">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="@string/add_offer_info_offer_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_margin="@dimen/views_top_margin"
                        android:textStyle="normal|bold"
                        android:textAllCaps="false" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/views_button_margin">

                        <TextView
                            android:text="@string/city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/addOffer_title_text"
                            android:textStyle="normal|bold"
                            android:textSize="18sp"
                            android:layout_margin="@dimen/views_top_margin" />

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/addOffer_spinCity"
                            android:textAlignment="center"
                            android:layout_marginRight="@dimen/views_margin"
                            android:layout_marginLeft="@dimen/views_margin"
                            android:layout_weight="0.81" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"
                        android:layout_marginLeft="@dimen/views_top_margin"
                        android:layout_marginRight="@dimen/views_top_margin"
                        android:layout_marginTop="@dimen/views_margin_s"
                        android:layout_marginBottom="@dimen/views_margin_s"
                        />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/views_button_margin">

                        <TextView
                            android:text="@string/type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/addOffer_title_text"
                            android:textStyle="normal|bold"
                            android:textSize="18sp"
                            android:layout_margin="@dimen/views_top_margin" />

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/addOffer_spinType"
                            android:textAlignment="center"
                            android:layout_marginRight="@dimen/views_margin"
                            android:layout_marginLeft="@dimen/views_margin"
                            android:layout_weight="0.81" />
                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView

                android:id="@+id/card_view4"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_view3"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/views_button_margin"
                android:layout_marginRight="@dimen/views_button_margin"
                android:layout_marginTop="@dimen/views_button_margin">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="@string/add_offer_info_user_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/addOffer_title_text"
                        android:textStyle="normal|bold"
                        android:textSize="18sp"
                        android:layout_margin="@dimen/views_top_margin" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/views_button_margin">

                        <TextView
                            android:text="@string/add_offer_user_name_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/addOffer_title_text"
                            android:textStyle="normal|bold"
                            android:textSize="18sp"
                            android:layout_margin="@dimen/views_top_margin"
                            android:layout_marginLeft="@dimen/views_top_margin" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/addOffer_title_text"
                            android:textStyle="normal|bold"
                            android:textSize="18sp"
                            android:layout_margin="@dimen/views_top_margin"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"
                        android:layout_marginLeft="@dimen/views_top_margin"
                        android:layout_marginRight="@dimen/views_top_margin"
                        android:layout_marginTop="@dimen/views_margin_s"
                        android:layout_marginBottom="@dimen/views_margin_s"
                        />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/views_button_margin">

                        <TextView
                            android:text="@string/add_offer_user_phone_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/addOffer_title_text"
                            android:textStyle="normal|bold"
                            android:textSize="18sp"
                            android:layout_margin="@dimen/views_top_margin"
                            android:layout_marginLeft="@dimen/views_top_margin" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/addOffer_title_text"
                            android:textStyle="normal|bold"
                            android:textSize="18sp"
                            android:layout_margin="@dimen/views_top_margin"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"
                        android:layout_marginLeft="@dimen/views_top_margin"
                        android:layout_marginRight="@dimen/views_top_margin"
                        android:layout_marginTop="@dimen/views_top_margin"
                        android:layout_marginBottom="@dimen/views_top_margin"
                        />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/views_button_margin">

                        <TextView
                            android:text="@string/my_account_homeCity_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/addOffer_title_text"
                            android:textStyle="normal|bold"
                            android:textSize="18sp"
                            android:layout_margin="@dimen/views_top_margin"
                            android:layout_marginLeft="@dimen/views_top_margin" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/addOffer_title_text"
                            android:textStyle="normal|bold"
                            android:textSize="18sp"
                            android:layout_margin="@dimen/views_top_margin"
                            android:layout_weight="1" />
                    </LinearLayout>

                </LinearLayout>



            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView

                android:id="@+id/card_view5"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_view4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/views_button_margin"
                android:layout_marginRight="@dimen/views_button_margin"
                android:layout_marginTop="@dimen/views_button_margin">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:text="Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/addOffer_cancel" />

                    <Button
                        android:text="Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/addOffer_save" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </ScrollView>



</RelativeLayout>