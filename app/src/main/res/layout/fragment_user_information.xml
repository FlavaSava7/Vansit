<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userInformation"
    android:background="@drawable/layout_bg"
    android:layout_marginRight="@dimen/views_margin_xl"
    android:layout_marginLeft="@dimen/views_margin_xl"
    android:paddingTop="@dimen/views_button_margin">

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#cc282828"
        android:layout_marginTop="@dimen/views_margin_xl" />

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_user_male"
        android:id="@+id/user_information_img"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@+id/user_information_img"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_information_name"
            android:textColor="#cc101010"
            android:layout_below="@+id/user_information_img"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAlignment="center"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <TextView
            android:text="Age : "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_information_age"
            android:layout_below="@+id/user_information_name"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAlignment="center"
            android:paddingTop="15dp"
            android:textColor="#cc101010"
            android:gravity="center"/>

        <TextView
            android:text="Home city :"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_information_city"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#cc101010"
            android:paddingBottom="10dp"
            android:gravity="center"/>


        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#cc282828"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/views_margin_xl" />

        <TextView
            android:text="see more offers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_information_more"
            android:textColor="@color/more_offers"
            android:layout_below="@+id/user_information_city"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginBottom="@dimen/views_button_margin"
            android:layout_marginTop="@dimen/views_button_margin"
            android:textAllCaps="true"
            android:textStyle="normal|bold" />
    </LinearLayout>

    <TextView
        android:text="@string/user_information_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView5"
        android:textStyle="normal|bold"
        android:gravity="center"
        android:textColor="#cc101010"
        android:drawableTint="#cc101010"
        android:textSize="14sp"
        android:textAllCaps="true"
        android:drawableLeft="@drawable/ic_account_profile"
        android:drawablePadding="@dimen/views_margin_s" />

</RelativeLayout>
