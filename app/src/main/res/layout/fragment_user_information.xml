<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".userInformation">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_user_male"
        android:id="@+id/user_information_img"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_information_img"
        android:textAlignment="center">

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_information_name"
            android:textStyle="normal|bold"
            android:layout_below="@+id/user_information_img"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAlignment="center"
            android:textSize="24sp"
            android:gravity="center"/>

        <TextView
            android:text="Age : "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_information_age"
            android:layout_below="@+id/user_information_name"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAlignment="center"
            android:paddingBottom="5dp"
            android:paddingTop="15dp"
            android:gravity="center"/>

        <TextView
            android:text="Home city :"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_information_city"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="10dp"
            android:gravity="center"/>



        <TextView
            android:text="see more offers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_information_more"
            android:padding="10dp"
            android:layout_marginTop="24dp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_below="@+id/user_information_city"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAlignment="center"
            android:gravity="center"/>
    </LinearLayout>

</RelativeLayout>
