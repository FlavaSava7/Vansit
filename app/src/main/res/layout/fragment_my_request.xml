<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyRequest"
    android:background="@drawable/layout_bg"
    android:layout_marginRight="@dimen/views_margin_xl"
    android:layout_marginLeft="@dimen/views_margin_xl"
    android:paddingTop="@dimen/views_button_margin">

    <View
        android:id="@+id/v1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#cc282828"
        android:layout_marginTop="@dimen/views_margin_xl" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@+id/v1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <TextView
            android:text="30:00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/my_request_time"
            android:textColor="#cc101010"
            android:layout_below="@+id/my_request_img"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAlignment="center"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <TextView
            android:text="Address:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/my_request_address"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAlignment="center"
            android:textColor="#cc101010"
            android:gravity="center"/>

        <TextView
            android:text="Type:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/my_request_type"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#cc101010"
            android:paddingBottom="10dp"
            android:gravity="center"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#cc282828"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />

        <TextView
            android:text="@string/my_request_refresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/my_request_update"
            android:textColor="@color/more_offers"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginBottom="@dimen/views_button_margin"
            android:layout_marginTop="@dimen/views_button_margin"
            android:textAllCaps="true"
            android:textStyle="normal|bold" />
        <TextView
            android:text="No Drivers Want to Serve You!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/my_request_is_there_drivers"
            android:textColor="@color/com_facebook_blue"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAlignment="center"
            android:gravity="center"
            android:textStyle="normal"
            android:visibility="gone"/>
        <ListView
            android:id="@+id/my_request_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <TextView
        android:text="@string/my_request_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView5"
        android:textStyle="normal|bold"
        android:gravity="center"
        android:textColor="#cc101010"
        android:drawableTint="#cc101010"
        android:textSize="14sp"
        android:textAllCaps="true"
        android:drawablePadding="@dimen/views_margin_s" />


</RelativeLayout>
