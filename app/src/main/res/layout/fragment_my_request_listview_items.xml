<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/my_request_listview_items"
    android:elevation="5dp">

    <android.support.v7.widget.CardView

        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/views_button_margin"
        android:layout_marginRight="@dimen/views_button_margin"
        android:layout_marginTop="@dimen/views_button_margin">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/my_request_items_nameData"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/views_margin"
                android:layout_marginLeft="@dimen/views_margin"
                android:layout_marginTop="@dimen/views_top_margin"
                android:textColor="@color/gray"
                android:singleLine="true"
                android:textSize="18sp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/views_margin"
                android:layout_marginRight="@dimen/views_margin">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/views_margin_s"
                    android:layout_marginBottom="@dimen/views_margin_s">

                    <TextView
                        android:text="@string/list_item_user_rating_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView3"
                        android:textSize="12sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/my_request_items_serviceRatingData"
                        android:layout_weight="1"
                        android:textSize="12sp"
                        android:layout_marginLeft="@dimen/views_top_margin"
                        android:layout_marginRight="@dimen/views_top_margin" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/fragment_background"
                    android:layout_marginLeft="@dimen/views_top_margin"
                    android:layout_marginRight="@dimen/views_top_margin" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/views_margin_s"
                    android:layout_marginBottom="@dimen/views_margin_s">

                    <TextView
                        android:text="@string/list_item_price_rating_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView3"
                        android:textSize="12sp"
                        android:textStyle="normal|bold"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/my_request_items_priceRatingData"
                        android:layout_weight="1"
                        android:textSize="12sp"
                        android:layout_marginLeft="@dimen/views_top_margin"
                        android:layout_marginRight="@dimen/views_top_margin" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_marginLeft="@dimen/views_margin"
                android:layout_marginRight="@dimen/views_margin">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_request_accept_btn"
                    android:id="@+id/my_request_items_accept_text"
                    android:textAllCaps="true"
                    android:textStyle="normal|bold"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="12sp"
                    android:textColor="#2a7e01"
                    android:drawableTint="@color/gray"
                    android:drawableTintMode="src_atop"
                    android:gravity="center_vertical"
                    android:textAlignment="center"
                    style="@style/Base.Widget.AppCompat.Button.ButtonBar.AlertDialog"
                    android:layout_weight="0.3" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/list_item_profile_text"
                    android:id="@+id/my_request_items_profile_text"
                    android:drawableLeft="@drawable/ic_person"
                    android:textAllCaps="true"
                    android:textStyle="normal|bold"
                    android:layout_weight="0.3"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:drawableTint="@color/gray"
                    android:drawableTintMode="src_atop"
                    style="@style/Base.Widget.AppCompat.Button.ButtonBar.AlertDialog"
                    android:textAlignment="gravity"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_request_decline_btn"
                    android:id="@+id/my_request_items_decline_text"
                    android:textAllCaps="true"
                    android:textStyle="normal|bold"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="12sp"
                    android:textColor="#b60101"
                    android:drawableTint="@color/gray"
                    android:drawableTintMode="src_atop"
                    android:gravity="center_vertical"
                    android:textAlignment="center"
                    android:layout_weight="0.3"
                    style="@style/Base.Widget.AppCompat.Button.ButtonBar.AlertDialog"/>


            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
