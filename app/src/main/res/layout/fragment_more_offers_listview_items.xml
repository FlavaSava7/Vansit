<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/moreOffers_items_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title:"
        android:textColor="#000000"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/moreOffers_items_TitleData"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/moreOffers_items_Title"
        android:textColor="#000000"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/moreOffers_items_City"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/moreOffers_items_TitleData"
        android:text="City:"
        android:textColor="#000000"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/moreOffers_items_cityData"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/moreOffers_items_City"
        android:layout_below="@id/moreOffers_items_TitleData"
        android:textColor="#000000"
        android:textSize="12sp"
        />
    <ImageView
        android:id="@+id/moreOffers_items_typeIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/car"/>
</RelativeLayout>